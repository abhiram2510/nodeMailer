<!-- index.html -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>

    <!-- Include Tailwind CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">

    <div class="bg-white p-8 rounded shadow-md w-96">
        <h2 class="text-2xl font-semibold mb-6">OTP Verification</h2>

        <form id="otpForm" action="/verification" method="POST" class="space-y-4">
            <input type="hidden" name="email" id="emailInput" value="<%= email %>" class="hidden">

            <label for="otp" class="block text-sm font-medium text-gray-600">Enter OTP:</label>
            <input type="text" id="otp" name="otp" required
                   class="mt-1 p-2 w-full border rounded-md transition duration-300 focus:outline-none focus:border-blue-500">

            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition duration-300 w-full">
                Verify OTP
            </button>
        </form>

        <p id="result"></p>

        <form id="resendForm" action="/resend-otp" method="post" class="mt-4">
            <input type="hidden" name="email" value="<%= email %>" class="hidden">
            <button type="submit" class="bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400 transition duration-300 w-full">
                Resend OTP
            </button>
        </form>
    </div>

</body>
</html>
